    <script>
        $(function () {
            layui.use(['form', 'layedit', 'laydate', 'element', 'jquery'], function () {

                var form = layui.form;

                form.on('submit(addtext)', function (data) {
                    var text = '<li><div class="layui-form-item">   <div class="layui-input-block"><input type="text" tag="opts" placeholder="参数" class="layui-input" style="width:300px;/">   <textarea tag="optsvalue" placeholder="请输入" class="layui-textarea"></textarea></div></div ></div></li > ';
                    $("#optionstext").append(text);
                    return false;
                })
                form.on('submit(deltext)', function (data) {

                    $("#optionstext").children("li").last().remove();

                    return false;
                })

                form.on('submit(postdata)', function (datas) {

                    var posturl = $("#url").val();
                    var text = "";
                    $.each($("#optionstext").children("li"), function (i, e) {

                        text += $(e).children().children().children().eq(0).val();
                        text += "=";
                        text += $(e).children().children().children().eq(1).val();
                        text += "&";

                    })
                    $.ajax({
                        url: "/Home/GetServer",
                        type: "post",
                        dataType: 'json',
                        data: { posturl: posturl, data: text.substr(0, text.length - 1) },
                        success: function (data) {
                            $("#ReturnMsg").val(data.Msg)
                        }

                    })
                    return false;
                })
            });
            //各种基于事件的操作，下面会有进一步介绍
        })
    </script>
